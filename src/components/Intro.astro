---
import { SITE_TITLE } from "src/config.ts";
import { SITE_DESCRIPTION } from "src/config.ts";
---

<section class="mb-8">
  <div class="mb-6">
    <h1
      class="font-bold text-text-heading text-center text-4xl md:text-5xl pt-4 pb-2 overflow-hidden"
    >
      <span
        class="
            bg-gradient-to-bl bg-no-repeat bg-bottom bg-[length:90%_40%]
            from-primary-blue to-primary-blue dark:from-primary-blue dark:to-primary-blue
        "
      >
        {SITE_TITLE}
      </span>
    </h1>
    <!-- <p class="text-2xl pb-4">Web Developer. OSS Wizard. Blogger.</p> -->
  </div>
  <div>
    <p class="mb-5 text-xl">
      {SITE_DESCRIPTION} <br /> <br />
    </p>
    <p class="text-center whitespace-nowrap overflow-auto">
      <code class="py-1 px-2">Please Explore!</code><br /><br />
      <code>BTW, comments take 10-30 seconds to appear after submiting them!</code>
    </p>
  </div>
</section>
